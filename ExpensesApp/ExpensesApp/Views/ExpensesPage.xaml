<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExpensesApp.Views.ExpensesPage">

    
    <ContentPage.Content>
        
        <StackLayout>
            <Entry />
            <ListView ItemsSource="{Binding ExpenseTotal}" HorizontalOptions="FillAndExpand">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell StyleId="checkmark" Text="{Binding ExpensesName}" Detail="{Binding ShortDescription}">
                           
                                       

                        </TextCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>